{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>whitesource/merge-confidence:beta",
    "config:base",
    "group:recommended",
    "group:monorepos"
  ],
  "labels": [
    "renovate"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "automergeType": "pr",
    "platformAutomerge": true
  },
  "packageRules": [
    {
      "matchDepTypes": ["packageManager"],
      "prPriority": 100
    },
    {
      "matchSourceUrls": [
        "https://github.com/yjl9903/breadc"
      ],
      "groupName": "Breadc monorepo"
    },
    {
      "matchSourceUrls": [
        "https://github.com/yjl9903/breadfs"
      ],
      "groupName": "BreadFS monorepo"
    },
    {
      "matchSourceUrls": [
        "https://github.com/yjl9903/naria2"
      ],
      "groupName": "naria2 monorepo"
    },
    {
      "matchSourceUrls": [
        "https://github.com/yjl9903/OneKuma"
      ],
      "groupName": "OneKuma monorepo"
    },
    {
      "matchSourceUrls": [
        "https://github.com/unocss/unocss"
      ],
      "groupName": "UnoCSS monorepo"
    },
    {
      "matchSourceUrls": [
        "https://github.com/withastro/astro"
      ],
      "groupName": "Astro monorepo"
    },
    {
      "matchPackagePrefixes": ["@astrojs"],
      "groupName": "Astro monorepo"
    },
    {
      "matchSourceUrls": [
        "https://github.com/honojs/hono"
      ],
      "groupName": "hono"
    },
    {
      "matchPackagePrefixes": ["@hono"],
      "groupName": "hono"
    },
    {
      "matchPackagePrefixes": ["drizzle-"],
      "groupName": "drizzle"
    },
    {
      "matchPackagePrefixes": ["@iconify-json"],
      "automerge": true,
      "groupName": "iconify"
    },
    {
      "matchPackagePrefixes": [" @radix-ui"],
      "groupName": "radix-ui"
    },
    {
      "matchPackageNames": ["class-variance-authority", "clsx", "tailwind-merge", "tailwindcss-animate"],
      "automerge": true,
      "groupName": "tailwind utils"
    },
    {
      "matchPackageNames": ["wrangler", "@cloudflare/workers-types"],
      "groupName": "wrangler"
    },
    {
      "matchPackageNames": ["swagger-ui-react", "lucide-react", "lucide-vue-next", "type-fest"],
      "automerge": true
    },
    {
      "matchDepTypes": [
        "devDependencies",
        "packageManager"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "automerge": true
    },
    {
      "enabled": false,
      "packageNames": [
        "node"
      ]
    },
    {
      "enabled": false,
      "matchDepTypes": [
        "peerDependencies"
      ]
    }
  ],
  "prConcurrentLimit": 3,
  "prHourlyLimit": 0,
  "rangeStrategy": "bump"
}
